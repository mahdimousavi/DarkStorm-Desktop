<Fluent:RibbonTabItem x:Class="DarkStorm.Desktop.Modules.TimeCard.UI.RibbonTabItems.RTIWorkCodeView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
            mc:Ignorable="d" 
            Fluent:KeyTip.Keys="A" Header="Home">
    <Fluent:RibbonGroupBox Header="Actions">
        <Fluent:Button Header="Save"
                       x:Name="SaveButton"
                Fluent:KeyTip.AutoPlacement="False"
                Fluent:KeyTip.HorizontalAlignment="Center"
                Fluent:KeyTip.VerticalAlignment="Center"
                Fluent:KeyTip.Keys="S" /> 
        <Fluent:Button Header="Delete"
                       x:Name="DeleteButton"
                Fluent:KeyTip.AutoPlacement="False"
                Fluent:KeyTip.HorizontalAlignment="Center"
                Fluent:KeyTip.VerticalAlignment="Center"
                Fluent:KeyTip.Keys="D" />
    </Fluent:RibbonGroupBox>
</Fluent:RibbonTabItem>
