<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="DarkStorm.Desktop.Presentation.App"
             >
    <Application.Resources>

        <ResourceDictionary>
            <Style x:Key="BlockArrowStyle" TargetType="{x:Type ed:BlockArrow}">
                <Setter Property="Fill">
                    <Setter.Value>
                		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                			<GradientStop Color="#FF1789D1" Offset="0"/>
                			<GradientStop Color="#FF005CC4" Offset="1"/>
                			<GradientStop Color="#FF72CBE2" Offset="0.5"/>
                		</LinearGradientBrush>
                	</Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>
